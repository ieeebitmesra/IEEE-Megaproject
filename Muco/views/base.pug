// model for give review
#give_review_container_details.review_container_main.hidden
  .View_review_icon_cont
    .edit_give_review
      i.fas.fa-user-edit
    .img_Image Share Your Review
    #icon_cross_give_review x
  .view_Review_min_content
    .post__header.post__header__post-1
      img.tl-users-pf.tl-user-pf__post-1(src='/img/homepage/user-3.svg')
      .tl-users-info.tl-user-info__post-1
        .tl-users-name.tl-user-name__post-1
          | #{user.name}
        .tl-users-loc.tl-user-loc__post-1
          | #{user.city}
    form#from_give_review(action='')
      textarea#new_post_text(class='your_Review' name='post-content' maxlength='350' placeholder='Start writing Your Reviews!' required='')
    .give_rating-btn
      div
        i.fas.rating_view_review.fa-star(data-number='1')
        i.fas.rating_view_review.fa-star(data-number='2')
        i.fas.rating_view_review.fa-star(data-number='3')
        i.fas.rating_view_review.fa-star(data-number='4')
        i.fas.rating_view_review.fa-star(data-number='5')
