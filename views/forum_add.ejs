<%- include("partials/header1"); -%>
<link rel="stylesheet" href="/css/forum_add.css">
<%- include("partials/header2"); -%>

<div class="container">
  
    <div class="popup">
        <form action="/forum/add" method="POST">
          
          <div class= "title"><h1>Write Your Queries</h1></div>
            
            <div class="input-box">
            
            <span class="details">Title</span>
            <br>
            <input type="text" placeholder="title" required name="title">
            <br><br>
            <div class= select1>
            <span class="details">Topic</span> 
             <br>
             
             <select name="topic" required>
                 <option value="" disabled>Select</option>
                 <option value="Web-Development">Web-Development</option>
                 <option value="App-Development ">App-Development</option>
                 <option value="Machine-Learning">Machine-Learning</option>
                 <option value="Artificial-Intelligence">Artificial-Intelligence</option>
                 <option value="Robotics">Robotics</option>
                 <option value="Programming">Programming</option>
                 <option value="Engineering">Engineering</option>
                 <option value="Finance">Finance</option>
                 <option value="Graphic-Design">Graphic-Design</option>
                 <option value="Art">Art</option>
                 <option value="Photography">Photography</option>
             </select><br>
  
            
            <br>
            </div>
  
            
            <span class="details">Content</span>
            <br>
            <textarea name="content" id="" cols="36" rows="5" placeholder="Write here.." style="padding: 2%;"></textarea>
            <br><br>
  
          
            <button type="submit" class="btn btn-lg btn-primary post">Post</button>
            </div>
        </form>
    </div>
    </div>

<%- include("partials/footer"); -%>
